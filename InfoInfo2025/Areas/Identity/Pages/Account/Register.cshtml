@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<div class="row my-5">
    <div class="rounded bg-light shadow text-center p-3 col-10 offset-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
        <img src="~/graphic/ikona.png" alt="logo portalu" class="mb-3" />
        <hr />
        <section>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="oswald text-primary">Rejestracja</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="input-group mt-3">
                    <span class="input-group-text login_icon"><i class="bi-person-fill"></i></span>
                    <div class="form-floating">
                        <input asp-for="Input.FirstName" class="form-control" autocomplete="given-name" aria-required="true" placeholder="Imię użytkownika" />
                        <label asp-for="Input.FirstName" class="form-label"></label>
                    </div>
                </div>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>

                <div class="input-group mt-3">
                    <span class="input-group-text login_icon"><i class="bi-envelope-at-fill"></i></span>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Nazwa (e-mail)" />
                        <label asp-for="Input.Email" class="form-label"></label>
                    </div>
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>

                <div class="input-group mt-3">
                    <span class="input-group-text login_icon"><i class="bi-shield-lock-fill"></i></span>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Hasło" />
                        <label asp-for="Input.Password" class="form-label"></label>
                    </div>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>

                <div class="input-group mt-3">
                    <span class="input-group-text login_icon"><i class="bi-key-fill"></i></span>
                    <div class="form-floating">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    </div>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                <button id="registerSubmit" type="submit" class="w-100 my-2 btn btn-lg btn-primary">Zarejestruj się</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
