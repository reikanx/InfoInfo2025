@using System.Reflection
@using System.ComponentModel.DataAnnotations
@model InfoInfo2025.Models.Opinion

@{
    ViewData["Title"] = "Usuwanie opinii";
}

<h1 class="text-primary">Usuwanie opinii</h1>

@if (ViewData.ModelState.ErrorCount > 0)
{
    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <h5 class="alert alert-danger">
            <i class="bi bi-exclamation-octagon-fill me-3"></i>
            @error.ErrorMessage
        </h5>
    }
}

<h3 class="alert alert-danger" role="alert">Czy na pewno chcesz usunąć tę opinię?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AddedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AddedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OpinionId" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-light">Powrót do opinii</a>
    </form>
</div>
