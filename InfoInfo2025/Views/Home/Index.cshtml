@model InfoInfo2025.Models.ViewModels.HomeDataViewModel

@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    ViewData["Title"] = "Strona główna";
}

<div class="container">
    <!-- KATEGORIE -->
    <h2 class="visually-hidden" id="kategorie">Kategorie tekstów</h2>
    <div class="row text-center py-5">
        @if (Model.DisplayCategories != null)
        {
            @foreach (var item in Model.DisplayCategories)
            {
                <div class="col-md-6 col-lg-4">
                    <a class="text-primary text-decoration-none" asp-controller="Texts" asp-action="Index" asp-route-Kategoria="@item.CategoryId">
                        <i class="bi bi-@item.Icon fs-1"></i>
                        <h3 class="text-primary-emphasis">@item.Name</h3>
                    </a>
                    <p>@item.Description</p>
                </div>
            }
        }
    </div>

    <!-- AUTORZY -->
    <h2 class="visually-hidden" id="autorzy">Autorzy tekstów</h2>
    <div class="row py-5">
        <div id="carousel-autorzy" class="carousel slide carousel-dark" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carousel-autorzy" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Autorzy"></button>
                @for (int i=1; i<= Model.Authors.Count(); i++)
                {
                    <button type="button" data-bs-target="#carousel-autorzy" data-bs-slide-to="@i" aria-label="Autor @i"></button>
                }
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row">
                        <div class="col-lg-4">
                            <img src="~/photo/autorzy.jpg" alt="Autorzy tekstów" class="rounded-circle mx-auto d-block" width="250"/>
                        </div>
                        <div class="col-lg-8">
                            <h3 class="fw-bold text-success fs-2">Twórcy portalu</h3>
                            <p>Z portalem współpracują uznani programiści oraz studenci.</p>
                        </div>
                    </div>
                </div>

                @foreach (var item in Model.Authors)
                {
                <div class="carousel-item">
                    <div class="row">
                        <div class="col-lg-4">
                            <img src="@Url.Content(item.Photo == null ? "~/photo/user.png" : "~/photo/" + item.Photo)" alt="@item.FullName" class="rounded-circle mx-auto d-block" width="250" />
                        </div>
                        <div class="col-lg-8">
                            <h3 class="fw-bold text-success fs-2">@item.FirstName</h3>
                            <p>@item.Information</p>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- DANE ADRESOWE -->
<h2 class="visually-hidden" id="dane">Dane teleadresowe</h2>
<div class="row bg-back py-5 justify-content-center">
    <section class="col-md-4">
