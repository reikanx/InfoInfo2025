            <div class="ps-5 my-3 col-6 col-md-12">
                <img src="~/graphic/ikona.png" width="120" alt="InfoInfo" class="rounded-circle" />
            </div>
            <div class="my-3 pt-3 col-6 col-md-12 text-light">
                <p><i class="bi bi-geo-alt-fill me-2"></i>Płock, al. Kilińskiego 12</p>
                <p><i class="bi bi-telephone-fill me-2"></i> +48 24 366 41 00</p>
                <p><i class="bi bi-envelope-fill me-2"></i> infoinfo@wlodkowic.pl</p>
            </div>
        </div>
    </section>

